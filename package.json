{
  "name": "@jcodigital/jman",
  "version": "2.2.0",
  "description": "A command-line tool for managing projects",
  "main": "src/jman.ts",
  "type": "module",
  "keywords": [
    "cli",
    "wordpress",
    "spinupwp",
    "project",
    "management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JCO-Digital/jman.git"
  },
  "bin": {
    "jman": "bin/jman"
  },
  "scripts": {
    "build": "bun build --compile --minify --sourcemap --bytecode ./src/jman.ts --outfile=bin/jman",
    "test": "eslint ./src && prettier ./src --check",
    "format": "prettier ./src --write",
    "preversion": "bun run test",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "bun run build"
  },
  "author": "J&Co Digital",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@topcli/prompts": "^2.4.1",
    "xdg-basedir": "^5.1.0",
    "html-entities": "^2.6.0",
    "semver": "^7.7.3",
    "smol-toml": "^1.6.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^18.19.130",
    "@types/semver": "^7.7.1",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "yaml": "^2.8.2"
  },
  "packageManager": "bun@1.2.4"
}
