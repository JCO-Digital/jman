    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^18.19.130",
    "@types/semver": "^7.7.1",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.25.12",
    "eslint": "~9.28.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "yaml": "^2.8.2"
