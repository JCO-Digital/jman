{
  "name": "@jcodigital/jman",
  "version": "1.4.9",
  "description": "A command-line tool for managing projects",
  "main": "src/main.ts",
  "keywords": [
    "cli",
    "wordpress",
    "spinupwp",
    "project",
    "management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JCO-Digital/jman.git"
  },
  "bin": {
    "jman": "./dist/jman"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --platform=node --external:better-sqlite3 --outfile=dist/jman",
    "dev": "esbuild src/main.ts --bundle --watch  --sourcemap --platform=node --external:better-sqlite3 --outfile=dist/jman",
    "test": "eslint ./src && prettier ./src --check",
    "format": "prettier ./src --write",
    "preversion": "pnpm test",
    "version": "auto-changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "pnpm run build"
  },
  "author": "J&Co Digital",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@folder/xdg": "^4.0.1",
    "@topcli/prompts": "^2.4.1",
    "better-sqlite3": "^12.6.2",
    "semver": "^7.7.3",
    "smol-toml": "^1.6.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^18.19.130",
    "@types/semver": "^7.7.1",
    "auto-changelog": "^2.5.0",
    "esbuild": "^0.25.12",
    "eslint": "~9.28.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "yaml": "^2.8.2"
  },
  "packageManager": "pnpm@10.14.0-0"
}
