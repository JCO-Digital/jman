  "main": "src/main.ts",
  "bin": {
    "jman": "./dist/jman"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --platform=node --outfile=dist/jman",
    "dev": "esbuild src/main.ts --bundle --watch  --sourcemap --platform=node --outfile=dist/jman",
