    "preversion": "pnpm test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "pnpm run build"
  },
